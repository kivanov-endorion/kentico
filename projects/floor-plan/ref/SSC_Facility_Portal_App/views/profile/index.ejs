
<div class="row-fluid">
    <div class="span12">
        <div class="box box-bordered box-condensed">
            <div class="box-title" style="margin-top: 0!important;">
                <h3>Profile Information</h3>

                <div class="actions">
                    <a href="#" class="btn btn-mini content-slideUp"><i class="icon-angle-down"></i></a>
                </div>
            </div>

            <div class="box-content nopadding">

                <form action="/users/updateUser" method="POST" class="form-horizontal form-column form-bordered form-condensed">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group">
                                <label for="textfield" class="control-label" style="width: 150px;">Username:</label>
                                <div class="controls">
                                    <input type="text" name="username" value="<%= username %>" readonly="true" />
                                </div>
                            </div>
                            <div class="control-group">
                              <label for="textfield" class="control-label" style="width: 150px;">Password:</label>
                              <div class="controls">
                                <input type="password" name="password" />
                              </div>
                            </div>
                            <div class="control-group">
                              <label for="textfield" class="control-label" style="width: 150px;">Repeat Password:</label>
                              <div class="controls">
                                <input type="password" name="repeatPassword" />
                              </div>
                            </div>
                          <button class="btn-block btn btn-large" type="submit">Update</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>